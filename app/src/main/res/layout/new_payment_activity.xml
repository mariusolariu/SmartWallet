<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.upt.cti.smartwallet.NewPayment">

    <LinearLayout
        android:id="@+id/lHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Payment Name: "
            android:textColor="@color/red"
            android:layout_weight="0.5"
            android:padding="10dp"
            android:textSize="15dp"
            android:textStyle="bold"
            android:id="@+id/nPayView" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_weight="0.5"
            android:layout_alignParentTop="true"
            android:id="@+id/paymentNameV"
            android:hint="Insert payment name..." />

       </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue"
            android:layout_margin="10dp">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:padding="10dp"
                android:text="Cost:"
                android:textColor="@color/red"
                android:textSize="15dp"
                android:textStyle="bold" />

            <EditText
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:hint="15"
                android:layout_weight="0.5"
                android:id="@+id/costV"
                />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:layout_margin="10dp">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:padding="10dp"
            android:text="Type:"
            android:textColor="@color/red"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:hint="food"
            android:layout_weight="0.5"
            android:id="@+id/typeV"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Delete"
            android:textAllCaps="false"
            android:layout_margin="10dp"
            android:background="@color/red"
            android:id="@+id/deleteBtn"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Save"
            android:textAllCaps="false"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@color/green"
            android:id="@+id/saveBtn"/>



    </LinearLayout>


    <!--
    <TextView
        android:id="@+id/tIndex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="1"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/tName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Fish and chips"
        android:textColor="@color/white"/>
        -->



</LinearLayout>
